<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>

        <record id="action_property_view_offers" model="ir.actions.act_window">
            <field name="name">Property Offers</field>
            <field name="res_model">estate.property.offer</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('property_id', '=', active_id)]</field>

        </record>

        <record id="view_property_search_view" model="ir.ui.view">
            <field name="name">estate.property.search</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name" />
                    <field name="state" />
                    <filter string="State: New" name="state_new" domain="[('state', '=', 'new')]" />
                    <filter string="State: Sold" name="state_sold" domain="[('state', '=', 'sold')]" />

                    <group expand="0" string="Group by">
                    <filter string="status" name="group_by_state" context="{'group_by': 'state'}" />
                    </group>

                    <searchpanel>
                    <field name="state" icon="fa-filter" groupby="group_by_state"  limit="0" />
                    </searchpanel>
                    
                </search>
            </field>
        </record>


        <record id="view_property_tree_view" model="ir.ui.view">
            <field name="name">estate.property.tree</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" />
                    <field name="tag_ids" />
                    <field name="type_id" />
                    <field name="postcode" />
                    <field name="date_availability" />
                    <field name="expected_price" />
                    <field name="best_offer" />
                    <field name="selling_price" />
                    <field name="state" widget="badge" />
                </tree>
            </field>
        </record>

        <record id="view_property_form_view" model="ir.ui.view">
            <field name="name">estate.property.form</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="action_sold" string="Sold" type="object"
                            class="btn btn-primary" />
                        <button name="action_cancelled" string="Cancelled" type="object"
                            class="btn btn-danger" />
                        <field name="state" widget="statusbar"
                            statusbar_visible="new,accepted,sold,cancelled" />
                    </header>
                    <sheet>

                        <div class="oe_button_box" name="button_box">

                            <button class="oe_stat_button" name="action_property_view_offer"
                                type="object" icon="fa-folder-open">
                                <field name="offer_count" string="Offers" widget="statinfo" />
                            </button>

                        </div>


                        <group>
                            <field name="name" widget="char_emojis" placeholder="Property Name" />
                            <field name="tag_ids" widget="many2many_tags"
                                options="{'color_field':'color'}" />

                            <group>
                                <field name="type_id" />
                                <field name="postcode" />
                                <field name="date_availability" />
                            </group>

                            <group>
                                <field name="expected_price" />
                                <field name="best_offer" />
                                <field name="selling_price" />
                            </group>

                            <notebook>
                                <page string="Description">
                                    <group>
                                        <field name="description" />
                                        <field name="bedrooms" />
                                        <field name="living_area" />
                                        <field name="facades" />
                                        <field name="garage" widget="boolean_toggle" />
                                        <field name="garden" />
                                        <field name="garden_area" />
                                        <field name="garden_orientation" invisible="not garden"
                                            widget="selection_badge" />
                                        <field name="total_area" />
                                    </group>
                                </page>
                                <page string="Offers">
                                    <field name="offer_ids">

                                        <tree editable="bottom">
                                            <field name="price" />
                                            <field name="status" />
                                            <field name="create_date" />
                                            <field name="partner_id" />
                                            <field name="property_id" />
                                            <field name="validity" />
                                            <field name="date_deadline" widget="remaining_days" />

                                        </tree>

                                    </field>

                                </page>
                                <page string="Other Info">
                                    <group>
                                        <field name="sales_id" widget="many2one_avatar_user" />
                                        <field name="buyer_id" />
                                        <field name="phone" widget="phone" />
                                    </group>
                                </page>

                            </notebook>

                        </group>

                    </sheet>

                </form>

            </field>

        </record>


        <record id="action_property" model="ir.actions.act_window">
            <field name="name">Property</field>
            <field name="res_model">estate.property</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_property_tree_view" />

            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    You don't have any property yet.
                </p>
            </field>

        </record>

    </data>

</odoo>