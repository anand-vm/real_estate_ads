<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>

        <record id="action_property_view_offers" model="ir.actions.act_window">
            <field name="name">Property Offers</field>
            <field name="res_model">estate.property.offer</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('property_id', '=', active_id)]</field>

        </record>

        <record id="view_property_search_view" model="ir.ui.view">
            <field name="name">estate.property.search</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name" />
                    <field name="state" />
                    <filter string="State: New" name="state_new" domain="[('state', '=', 'new')]" />
                    <filter string="State: Sold" name="state_sold" domain="[('state', '=', 'sold')]" />

                    <group expand="0" string="Group by">
                        <filter string="status" name="group_by_state"
                            context="{'group_by': 'state'}" />
                    </group>

                    <searchpanel>
                        <field name="state" icon="fa-filter" groupby="group_by_state" limit="0" />
                    </searchpanel>

                </search>
            </field>
        </record>


        <record id="view_property_pivot_view" model="ir.ui.view">
            <field name="name">estate.property.pivot</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <pivot>
                    <field name="name" type="row" />
                    <field name="best_offer" type="measure" />
                    <field name="selling_price" type="measure" />
                    <field name="facades" type="measure" />
                    <field name="bedrooms" type="measure" />
                    <field name="state" type="col" />
                </pivot>
            </field>
        </record>


        <record id="view_property_tree_view" model="ir.ui.view">
            <field name="name">estate.property.tree</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" />
                    <field name="tag_ids" />
                    <field name="type_id" />
                    <field name="postcode" />
                    <field name="date_availability" />
                    <field name="expected_price" />
                    <field name="best_offer" />
                    <field name="selling_price" />
                    <field name="state" widget="badge" />
                </tree>
            </field>
        </record>

        <record id="view_property_form_view" model="ir.ui.view">
            <field name="name">estate.property.form</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="action_sold" string="Sold" type="object"
                            class="btn btn-primary" />
                        <button name="action_cancelled" string="Cancelled" type="object"
                            class="btn btn-danger" />
                        <field name="state" widget="statusbar"
                            statusbar_visible="new,accepted,sold,cancelled" />
                    </header>


                    <sheet>

                        <div class="oe_button_box" name="button_box">

                            <button class="oe_stat_button" name="action_property_view_offer"
                                type="object" icon="fa-handshake-o">
                                <field name="offer_count" string="Offers" widget="statinfo" />
                            </button>

                            <button class="oe_stat_button" name="action_url_action"
                                type="object" icon="fa-handshake-o">
                                <field name="offer_count" string="Test URL Action" widget="statinfo" />
                            </button>

                        </div>


                        <group>
                            <field name="name" widget="char_emojis" placeholder="Property Name" />
                            <field name="tag_ids" widget="many2many_tags"
                                options="{'color_field':'color'}" />

                            <group>
                                <field name="type_id" />
                                <field name="postcode" />
                                <field name="date_availability" />
                            </group>

                            <group>
                                <field name="expected_price" />
                                <field name="best_offer" />
                                <field name="selling_price" />
                            </group>

                            <notebook>
                                <page string="Description">
                                    <group>
                                        <field name="description" />
                                        <field name="bedrooms" />
                                        <field name="living_area" />
                                        <field name="facades" />
                                        <field name="garage" widget="boolean_toggle" />
                                        <field name="garden" />
                                        <field name="garden_area" invisible="garden == False" />
                                        <field name="garden_orientation" invisible="not garden"
                                            widget="selection_badge" />
                                        <field name="total_area" />
                                    </group>
                                </page>
                                <page string="Offers">
                                    <field name="offer_ids">

                                        <tree editable="bottom"
                                            decoration-success="status == 'accepted'"
                                            decoration-danger="status == 'refused'">
                                            <field name="price" />
                                            <field name="status" />
                                            <field name="create_date" />
                                            <field name="partner_id" />
                                            <field name="property_id" />
                                            <field name="validity" />
                                            <field name="date_deadline" widget="remaining_days" />
                                            <field name="status" nolable="1" />
                                            <button class="btn btn-primary"
                                                name="action_accept_offer" type="object"
                                                icon="fa-check" string="Accept" />
                                            <button class="btn btn-danger"
                                                name="action_refuse_offer" type="object"
                                                icon="fa-times" string="Refuce" />

                                        </tree>

                                    </field>

                                </page>
                                <page string="Other Info">
                                    <group>
                                        <field name="sales_id" widget="many2one_avatar_user" />
                                        <field name="buyer_id" />
                                        <field name="phone" widget="phone" />
                                        <field name="campaign_id" />
                                        <field name="source_id" />
                                        <field name="medium_id" />
                                    </group>
                                </page>

                            </notebook>

                        </group>

                    </sheet>

                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"
                            options="{'fold': True}" />
                        <field name="message_ids" widget="mail_thread" />
                    </div>


                </form>

            </field>

        </record>

        <record id="estate_property_quick_create_form" model="ir.ui.view">
            <field name="name">estate.property.quick.create.form</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="name" placeholder="Enter property name" />
                        <field name="postcode" placeholder="Enter postcode" />
                    </group>
                </form>
            </field>
        </record>

        <record id="estate_property_calendar_view" model="ir.ui.view">
            <field name="name">estate.property.calendar</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <calendar date_start="date_availability" string="Properties" mode="month">
                    <field name="name" />
                    <field name="postcode" />
                    <field name="date_availability" />
                </calendar>
            </field>
        </record>


        <record id="view_property_kanban_view" model="ir.ui.view">

            <field name="name">estate.property.kanban</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <kanban default_group_by="state" on_create="quick_create"
                    quick_create_view="real_estate_ads.estate_property_quick_create_form">
                    <!-- Define fields used in the kanban view -->
                    <field name="name" />
                    <field name="buyer_id" />
                    <field name="postcode" />
                    <field name="state" />
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click o_kanban_record">
                                <div class="oe_kanban_content">
                                    <!-- Display property name -->
                                    <strong t-esc="record.name.value" class="o_kanban_record_title" />


                                    <!-- Display postcode -->
                                    <div>
                                        <span>Postcode:</span>
                                        <span t-esc="record.postcode.value" />
                                    </div>

                                    <!-- Display buyer information -->
                                    <div>
                                        <span>Buyer:</span>
                                        <span t-esc="record.buyer_id.value" />
                                    </div>

                                    <!-- Display state -->
                                    <div>
                                        <span>Status:</span>
                                        <span t-esc="record.state.value" />
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>


        <record id="action_property" model="ir.actions.act_window">
            <field name="name">Property</field>
            <field name="res_model">estate.property</field>
            <field name="view_mode">tree,kanban,calendar,pivot,form</field>
            <field name="view_id" ref="view_property_tree_view" />

            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    You don't have any property yet.
                </p>
            </field>
        </record>

        <record id="real_estate_ads.custom_client_action" model="ir.actions.client">
            <field name="name">Custom Client Action</field>
            <field name="tag">custom_client_action</field>
        </record>

        <record id="action_extend_offer_deadline" model="ir.actions.server">
            <field name="name">Extend Dead Line</field>
            <field name="model_id" ref="real_estate_ads.model_estate_property_offer" />
            <field name="state">code</field>
            <field name="binding_model_id" ref="real_estate_ads.model_estate_property_offer" />
            <field name="binding_view_types">list,form</field>
            <field name="code">
                action = model.extend_offer_deadline()
            </field>
        </record>

        <record id="ir_cron_extended_offer_deadline" model="ir.cron">
            <field name="name">Offers: Extend Deadline Everyday </field>
            <field name="model_id" ref="real_estate_ads.model_estate_property_offer" />
            <field name="state">code</field>
            <field name="code">model._extend_offer_deadline()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False" />
        </record>
    </data>

</odoo>