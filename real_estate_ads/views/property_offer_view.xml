<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>

        <record id="view_property_offer_tree_view" model="ir.ui.view">
            <field name="name">estate.property.offer.tree</field>
            <field name="model">estate.property.offer</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="price" />
                    <field name="status" />
                    <field name="create_date" />
                    <field name="partner_id" />
                    <field name="property_id" />
                    <field name="validity" />
                    <field name="date_deadline" />
                   
                </tree>
            </field>
        </record>

        <record id="view_property_offer_gantt_view" model="ir.ui.view">
            <field name="name">estate.property.offer.gantt</field>
            <field name="model">estate.property.offer</field>
            <field name="arch" type="xml">
                <gantt  date_start="create_date" date_stop="date_deadline" default_group_by="partner_id"/>
            </field>
        </record>


        <record id="view_property_offer_form_view" model="ir.ui.view">
            <field name="name">estate.property.offer.form</field>
            <field name="model">estate.property.offer</field>
            <field name="arch" type="xml">
                <form>

                    <sheet>
                        <group>
                            <field name="price" />
                            <field name="status" />
                            <field name="create_date" />
                            <field name="partner_id" />
                            <field name="property_id" />
                            <field name="validity" />
                            <field name="date_deadline" />
                            <field name="partner_email" />
                        </group>

                    </sheet>

                </form>

            </field>

        </record>


        <record id="action_property_offer" model="ir.actions.act_window">
            <field name="name">Property Offer</field>
            <field name="res_model">estate.property.offer</field>
            <field name="view_mode">tree,gantt,form</field>
            <field name="view_id" ref="view_property_offer_tree_view" />

            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    You don't have any property offer yet.
                </p>
            </field>


        </record>

    </data>

</odoo>